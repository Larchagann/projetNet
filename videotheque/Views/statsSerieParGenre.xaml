<Page x:Class="videotheque.Views.statsSerieParGenre"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:videotheque.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="statsSerieParGenre">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0"  Grid.Column="0" Style="{StaticResource sousListe}">a: nb</Label>
        <Label Grid.Row="1"  Grid.Column="0" Style="{StaticResource sousListe}">b: nb</Label>
        <Label Grid.Row="2"  Grid.Column="0" Style="{StaticResource sousListe}">c: nb</Label>
        <Label Grid.Row="3"  Grid.Column="0" Style="{StaticResource sousListe}">d: nb</Label>
    </Grid>
</Page>
